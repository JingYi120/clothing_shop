{{>user-profile route='favorite'}}

<div class="row mt-3">
  {{#each user.FavoritedClothes}}
  <div class="col-md-3">
    <div class="card mb-4 shadow-sm">
      {{#each this.Images}}
      {{#if isCover}}
      <a href="/clothes/{{../id}}">
        <img class="card-img-top img-fluid" src="{{name}}" alt="Card image cap" width="286px" height="180px"
          style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </a>
      {{/if}}
      {{/each}}
      <div class="card-body">
        <p class="card-text">
          <a href="/clothes/{{this.id}}">
            {{this.name}}
          </a>
        </p>
        <p class="card-text text-truncate">NT. {{this.price}}</p>

      </div>
    </div>
  </div>
  {{/each}}
</div>