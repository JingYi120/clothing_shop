<header>
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark px-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Clothing Shop</a>
      {{#if user}}
      <form class="d-flex ms-4" action="/search" method="GET">
        <input class="form-control me-2" type="search" name="keyword" placeholder="Enter Items' name" aria-label="Search"value={{ keyword }}>
        <button class="btn btn-outline-light" type="submit">Search</button>
      </form>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ms-auto mb-2 mb-md-0">
          {{#if user.isAdmin}}
          <li class="nav-item">
            <a href="/admin" class="nav-link">Admin Panel</a>
          </li>
          {{/if}}
          <li class="nav-item d-inline-flex align-items-center">
            <span class="text-white nav-link">Hi, {{ user.name }}</span>
          </li>
          <a class="cart mt-2 mx-2" href="/orderDetails">
            <i class="fa-solid fa-cart-shopping fa-lg" style="color: #ffffff;"></i>
          </a>
          <li class="nav-item">
            <a href="/users/favorite" class="nav-link">Profile</a>
          </li>
          <li class="nav-item">
            <a href="/logout"><button class="btn btn-outline-success my-sm-0 my-2">Logout</button></a>
          </li>
        </ul>
      </div>
      {{/if}}
    </div>
  </nav>
</header>