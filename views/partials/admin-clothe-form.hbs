<div class="form-row mb-3">
  <label class="form-label" for="name">Name</label>
  <input class="form-control" type="text" name="name" id="name" placeholder="Enter name" value="{{clothe.name}}" required>
</div>
<div class="form-row mb-3">
  <label class="form-label" for="description">Description</label>
  <textarea class="form-control" id="description" name="description" rows="3">{{clothe.description}}</textarea>
</div>
<div class="form-row mb-3">
  <label class="form-label" for="price">Price</label>
  <input class="form-control" type="text" name="price" id="price" placeholder="Enter price" value="{{clothe.price}}">
</div>

<button type="submit" class="btn btn-primary">Submit</button>