<div class="row justify-content-center">
  <div class="col-md-6 col-lg-8">
    <form action="/orders/{{order.id}}?_method=PUT" method="POST">
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title">Order Details</h5>
          </div>
          <ul class="list-group list-group-flush">
            {{#ifCond user.id userId}}
            {{#each order.OrderDetails}}
            <li class="list-group-item mb-3">
              <div class="d-flex justify-content-between align-items-center">
                <a class="pr-3 w-25" href="/clothes/{{this.Clothe.id}}">{{this.Clothe.name}}</a>
                <div class="pr-3">
                  <div class="form-group row">
                    <label for="quantity" class="col-sm-4 col-form-label">Quantity:</label>
                    <div class="col-sm-8">
                      <div class="input-group">
                        <input type="number" class="form-control form-control-sm" id="quantity" name="quantity"
                          value="{{this.quantity}}" min="0">
                      </div>
                    </div>
                  </div>
                  <span class="d-block text-primary">Price: NT.{{this.Clothe.price}}</span>
                </div>
              </div>
            </li>
            {{/each}}
            {{/ifCond}}
          </ul>
          <div class="card-footer">
            <div class="btn-group float-right mt-3" role="group">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>